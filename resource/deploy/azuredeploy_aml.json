{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "MachineLearningWorkspaceName": {
            "type": "String",
            "maxLength": 19,
            "metadata": {
                "description": "Specifies the name of the Azure Machine Learning Workspace."
            }
        },
        "KeyVaultName": {
            "type": "String",
            "maxLength": 51,
            "metadata": {
                "description": "Specifies the name of the Azure Key Vault."
            }
        }
    },
    "variables": {
        "tenantId": "[subscription().tenantId]",
        "keyVaultName": "[concat(parameters('KeyVaultName'), uniqueString(resourceGroup().id))]",
        "aml_workspaceName": "[concat(parameters('MachineLearningWorkspaceName'), uniqueString(resourceGroup().id))]",
        "aml_storageAccountName": "[concat('st', variables('aml_workspaceName'))]",
        "aml_applicationInsightsName": "[concat('ai', variables('aml_workspaceName'))]",
        "aml_containerRegistryName": "[concat('cr', variables('aml_workspaceName'))]", 
        "aml_keyVault": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
        "aml_storageAccount": "[resourceId('Microsoft.Storage/storageAccounts', variables('aml_storageAccountName'))]",
        "aml_applicationInsights": "[resourceId('Microsoft.Insights/components', variables('aml_applicationInsightsName'))]",
        "aml_containerRegistry": "[resourceId('Microsoft.ContainerRegistry/registries', variables('aml_containerRegistryName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-06-01-preview",
            "name": "[variables('keyVaultName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "tenantId": "[variables('tenantId')]",
                "sku": {
                    "name": "standard",
                    "family": "A"
                },
                "accessPolicies": [
                    {
                        "tenantId": "[subscription().tenantId]",
                        "objectId": "3e7c8b4f-0091-4b71-881e-b1d327ea3c8c",
                        "permissions": {
                            "keys": ["all"],
                            "secrets": ["all"],
                            "certificates": ["all"]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-06-01",
            "name": "[variables('aml_storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2"
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[variables('aml_applicationInsightsName')]",
            "location": "[resourceGroup().location]",
            "kind": "web",
            "properties": {
                "Application_Type": "web"
            }
        },
        {
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2021-06-01-preview",
            "name": "[variables('aml_containerRegistryName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard",
                "tier": "Standard"
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces",
            "apiVersion": "2021-07-01",
            "name": "[variables('aml_workspaceName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('aml_storageAccount')]",
                "[variables('aml_keyVault')]",
                "[variables('aml_applicationInsights')]",
                "[variables('aml_containerRegistry')]"
            ],
            "identity": {
                "type": "systemAssigned"
            },
            "properties": {
                "friendlyName": "[variables('aml_workspaceName')]",
                "storageAccount": "[variables('aml_storageAccount')]",
                "keyVault": "[variables('aml_keyVault')]",
                "applicationInsights": "[variables('aml_applicationInsights')]",
                "containerRegistry": "[variables('aml_containerRegistry')]"
            }
        }
    ]
}